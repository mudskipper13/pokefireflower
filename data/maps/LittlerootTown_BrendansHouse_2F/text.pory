text PalletTown_PlayersRoom_Text_ItsAGameCube {
	poryswitch(LANG) {
		_ {
			format(	"It's a Nintendo GameCube.\p"
					"A Game Boy Advance is connected to\n"
					"serve as the controller.")
		}
		INA {
			format(	"Ini adalah sebuah Nintendo GameCube.\p"
					"Sebuah Game Boy Advance dicolokkan\n"
					"ke dalamnya dan digunakan sebagai"
					"pengontrol.")
		}
	}
}

text PalletTown_PlayersRoom_Text_OhNotebook {
	poryswitch(LANG) {
		_ {
			format(	"{PLAYER}: Oh, my notebook.\p"
					"Maybe I should carry it with me"
					"later.")
		}
		INA {
			format(	"{PLAYER}: Oh, buku catatanku.\p"
					"Mungkin aku harus membawanya"
					"denganku nanti.")
		}
	}
}

text PlayersHouse_2F_Text_ClockIsStopped {
	poryswitch(LANG) {
		_ {
			format(	"The clock is stopped…\p"
					"Better set and start it!")
		}
		INA {
			format(	"Jam dindingnya mati…\p"
					"Sebaiknya diatur dan dinyalakan!")
		}
	}
}

text Common_Text_LookCloserAtMap {
	poryswitch(LANG) {
