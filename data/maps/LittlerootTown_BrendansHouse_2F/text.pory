}

text PalletTown_PlayersRoom_Text_ShouldPlayerRest {
	poryswitch(LANG) {
		_:		format("{PLAYER}: Should we rest here?")
		INA:	format("{PLAYER}: Apakah kita istirahat disini?")
	}
}

