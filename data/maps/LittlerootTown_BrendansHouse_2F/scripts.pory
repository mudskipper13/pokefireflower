mapscripts LittlerootTown_BrendansHouse_2F_MapScripts {}

script PalletTown_PlayersRoom_EventScript_Bed {
	lockall
	applymovement(OBJ_EVENT_ID_PLAYER, Common_Movement_WalkInPlaceDown)
	waitmovement(0)
	textcolor(NPC_TEXT_COLOR_PLAYER)
	if (!var(VAR_PALLET_TOWN_STATE)) {
		msgbox(PalletTown_PlayersRoom_Text_CantRestOthersWaiting, MSGBOX_AUTOCLOSE, Common_Names_Player)
		if (var(VAR_RESULT) == FEMALE) {
			applymovement(OBJ_EVENT_ID_PLAYER, PalletTown_PlayersRoom_Movement_WalkRight)
		} else {
			applymovement(OBJ_EVENT_ID_PLAYER, PalletTown_PlayersRoom_Movement_WalkLeft)
		}
		waitmovement(0)
		releaseall
		end
	}
	msgbox(PalletTown_PlayersRoom_Text_ShouldPlayerRest, MSGBOX_YESNO)
	if (var(VAR_RESULT)) {
		msgbox(PalletTown_PlayersRoom_Text_AlrightRestTime, MSGBOX_AUTOCLOSE, Common_Names_Player)
		call(Common_EventScript_OutOfCenterPartyHeal)
		msgbox(PalletTown_PlayersRoom_Text_AhBetter, MSGBOX_AUTOCLOSE, Common_Names_Player)
		checkplayergender
		if (var(VAR_RESULT) == FEMALE) {
			applymovement(OBJ_EVENT_ID_PLAYER, PalletTown_PlayersRoom_Movement_WalkLeft)
		} else {
			applymovement(OBJ_EVENT_ID_PLAYER, PalletTown_PlayersRoom_Movement_WalkRight)
		}
		waitmovement(0)
	} else {
		msgbox(PalletTown_PlayersRoom_Text_HmMaybeNot, MSGBOX_AUTOCLOSE, Common_Names_Player)
		checkplayergender
		if (var(VAR_RESULT) == FEMALE) {
			applymovement(OBJ_EVENT_ID_PLAYER, PalletTown_PlayersRoom_Movement_WalkRight)
		} else {
			applymovement(OBJ_EVENT_ID_PLAYER, PalletTown_PlayersRoom_Movement_WalkLeft)
		}
		waitmovement(0)
	}
	releaseall
}

script LittlerootTown_BrendansHouse_2F_EventScript_PC {
	lockall
	setvar(VAR_0x8004, PC_LOCATION_BRENDANS_HOUSE)
	special(DoPCTurnOnEffect)
	playse(SE_PC_ON)
	msgbox(gText_PlayerHouseBootPC, MSGBOX_DEFAULT)
	special(BedroomPC)
	waitstate
	releaseall
}

script LittlerootTown_BrendansHouse_2F_EventScript_TurnOffPlayerPC {
	setvar(VAR_0x8004, PC_LOCATION_BRENDANS_HOUSE)
	playse(SE_PC_OFF)
	special(DoPCTurnOffEffect)
	releaseall
}

