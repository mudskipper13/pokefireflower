
//! triggers / mapscripts

//! overworlds

text PalletTown_Text_CanModifyGames {
	poryswitch(LANG) {
		_:		format(
				"Today's technology is kinda cool!\p"

				"You can now change certain games"
				"to be whatever you want without"
				"any worries!\p"

				"…I honestly don't know what that"
				"means, but it sounds cool!")

		INA:	format(
				"Teknologi zaman sekarang lumayan"
				"keren!\p"

				"Sekarang kamu bisa memodifikasi suatu"
				"gim menjadi apapun yang kamu mau tanpa"
				"khawatir!\p"

				"…Aku sungguh tak tahu apa arti dari"
				"itu, tapi itu kedengarannya keren!")
	}
}

text PalletTown_Text_RaisingMonsToo {
	poryswitch(LANG) {
		_:		format(
				"I'm raising POKéMON, too.\p"

				"When they get strong, they can\n"
				"protect me.")

		INA:	format(
				"Aku juga merawat POKéMON.\p"

				"Saat mereka menjadi lebih kuat,"
				"mereka bisa melindungi ku.")
	}
}

text PalletTown_Text_HiWelcome {
	poryswitch(LANG) {
		_:		format(
				"Hi, welcome to our SHOP!\n"
				"How can I help you with?")
		INA:	format(
				"Hai, selamat datang ke TOKO kami!"
				"Apa yang bisa ku bantu?")
	}
}

text PalletTown_Text_ThanksForVisiting {
	poryswitch(LANG) {
		_:		format("Thanks for visiting us!")
		INA:	format("Terima kasih telah mengunjungi kami!")
	}
}

text PalletTown_Text_HeyThereSorry {
	poryswitch(LANG) {
	_:		format(
			"Hey there! Sorry, but we're out of "
			"stocks now. Come again at later time!")
	INA:	format(
			"Halo! Maaf, tapi persediaan stok "
			"kami baru saja habis. Kembali lagi di "
			"waktu lain!")
	}
}

text PalletTown_Text_WelcomeToShop {
	poryswitch(LANG) {
		_:		format(
				"Welcome to “our” SHOP.\n"
				"What do you want…")
		INA:	format(
				"Selamat datang ke TOKO “kami”.\n"
				"Kamu mau apa…")
	}
}

text PalletTown_Text_ThanksForPurchasing {
	poryswitch(LANG) {
		_:		format("Thanks for the purchase.")
		INA:	format("Terima kasih atas pembeliannya.")
	}
}

text PalletTown_Text_SorryButNoMoreStock {
	poryswitch(LANG) {
		_:		format(
				"Sorry but you're out of luck, kid.\p"
				"We have no more stocks, come back here"
				"later.")
		INA:	format(
				"Maaf tapi kamu ketinggalan, dik.\p"
				"Kita kehabisan stok, kembali kesini"
				"nanti.")
	}
}

text PalletTown_Text_MyGoodness {
	poryswitch(LANG) {
		_:		format(
				"Ah… Thank goodness I was"
				"just in the perfect time to shop here."
				"Imagine coming here long enough that"
				"everything has solds out…")
		INA:	format(
				"Ah… Syukurlah saya datang"
				"berbelanja disini di waktu yang tepat."
				"Bayangkan telat datang kesini sampai"
				"-sampai semua barangnya sudah ludes habis…")
	}
}

text PalletTown_Text_IWonder {
	poryswitch(LANG) {
		_:		format(
				"Hm, I wonder… If I ever get that"
				"damn SEADRA! This has been 20+ years!\p"

				"All I got is just MAGIKARP, MAGIKARP,"
				"and MAGIKARP! Argh!")
		INA:	format(
				"Hm, kapan… Kapan aku akhirnya"
				"mendapatkan SEADRA menyebalkan itu! Ini"
				"sudah 20+ tahun!\p"

				"Semua yang aku dapat hanyalah MAGIKARP,"
				"MAGIKARP, dan MAGIKARP! Argh!")
	}
}

