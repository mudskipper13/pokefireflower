	poryswitch(LANG) {
		_ {
			format(	"But first,{PAUSE 16} tell me about yourself.\p"
					"So,{PAUSE 16} are you a boy?\n"
					"{PAUSE 16} Or a girl?{PAUSE 30}")
		}
		INA {
			format(	"Tetapi pertama-tama,{PAUSE 16} jelaskan"
					"siapa dirimu kepadaku.\p"
					"Jadi,{PAUSE 16} apakah kamu anak laki?{PAUSE 16}\n"
					"Atau anak perempuan?{PAUSE 30}")
		}
	}
}

