	poryswitch(LANG) {
		_ {
			format(	"How about you?{PAUSE 30}\n"
					"Are you excited as well?")
		}
		INA {
			format(	"Bagaimana dengan mu?{PAUSE 30}\n"
					"Apakah kamu juga bersemangat?")
		}
	}
}

