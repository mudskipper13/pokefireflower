text gText_Birch_AreYouReady {
	poryswitch(LANG) {
		_ {
			format(	"{PAUSE 30}…Oh!{PAUSE 16} I remember now!\p"
					"You're {PLAYER} from PALLET TOWN,"
					"and you're one of my grandkids that"
					"lives there!\p"
					"It has been a while since we met, eh?\p"
					"Well, I am actually going to visit PALLET"
					"TOWN today.\p"
					"Grandpa also have a special gift for you"
					"and your sibling while at it.\l"
					"Just wait and see in the downstairs!\l"
					"See you there!{PAUSE_UNTIL_PRESS}"
					"$")
		}
		INA {
			format(	"{PAUSE 30}…Oh!{PAUSE 16} Saya ingat sekarang!\p"
					"Kamu adalah {PLAYER} dari KOTA PALLET,"
					"dan kamu adalah salah satu anak cucuku"
					"yang tinggal di sana!\p"
					"Sudah lama tidak jumpa, eh?\p"
					"Kebetulan, kakek akan mengunjungi KOTA"
					"PALLET hari ini.\p"
					"Kakek juga memiliki hadiah spesial untukmu"
					"dan kakakmu juga.\l"
					"Tunggu dan lihat saja dilantai bawah!\l"
					"Sampai jumpa disana!{PAUSE_UNTIL_PRESS}"
					"$")
		}
	}
}
