text gText_Birch_Welcome {
	poryswitch(LANG) {
		_ {
			format(	"Why hello there!{PAUSE 30}\n"
					"Thanks for waiting!\p"

					"And welcome to the world of POKéMON!\p"

					"My name is MARCUS AGARWOOD STARKSON.\p"

					"And I am what people called as a"
					"“POKéMON PROFESSOR.”\p"

					"$")
		}
		INA {
			format(	"Halo!{PAUSE 30}\n"
					"Terima kasih telah menunggu!\p"

					"Dan selamat datang ke dunia POKéMON!\p"

					"Nama saya MARCUS AGARWOOD STARKSON.\p"

					"Dan saya adalah apa yang orang sebut"
					"sebagai seorang “PROFESSOR POKéMON.”\p"

					"$")
		}
	}
}

text gText_ThisIsAPokemon {
	poryswitch(LANG) {
		_ {
			format(	"And this…{PAUSE 60} is a so-called"
					"“POKéMON.”{PAUSE 96}\p")
		}
		_ {
			format(	"Dan ini…{PAUSE 60} adalah apa yang"
					"disebut sebagai “POKéMON.”{PAUSE 96}\p")
		}
	}
}

text gText_Birch_MainSpeech {
	poryswitch(LANG) {
		_ {
			format(	"This world is largely inhabited by"
					"these creatures we call as POKéMON.\p"

					"We humans and humanoids live together"
					"with POKéMON, either as friendly"
					"playmates, or as cooperative"
					"workmates.\p"

					"And sometimes we also bond together"
					"and battle others similar to us.\p"

					"Despite our closeness however, there"
					"is still many mysteries and secrets"
					"surrounding POKéMON out there that"
					"we still haven't know the answer of.\p"

					"One of which is my main research,{PAUSE 16} which"
					"is how we are connected to POKéMON.\p"

					"There has been records of TRAINERs"
					"bonded with their POKéMON so powerful,"
					"that they became one! It's process is"
					"VERY similar to the legends of the TAO"
					"trios!\l"
					"How fascinating is that?!\p"

					"{PAUSE 30}…Sorry,{PAUSE 16} I got a bit excited there."
					"Shows how much passionate I am"
					"about this,{PAUSE 16} haha!\p"

					"$")
		}
		INA {
			format(	"Dunia ini kebanyakan dipenuhi oleh"
					"makhluk-makhluk hidup yang kita panggil"
					"sebagai POKéMON.\p"

					"Kita manusia dan humanoid hidup"
					"bersama dengan para POKéMON,"
					"layak sebagai teman bermain, atau"
					"rekan kerja yang kooperatif.\p"

					"Dan terkadang juga kita bersatu serta"
					"bertarung bersama dengan orang lain"
					"yang mirip dengan kita.\p"

					"Tetapi meski kedekatan kita, masih banyak"
					"misteri-misteri serta rahasia-rahasia"
					"mengenai POKéMON diluar sana yang kita"
					"masih belum tahu jawabannya.\p"

					"Salah satunya yaitu penelitian utamaku,{PAUSE 16}"
					"yaitu bagaimana kita manusia dan humanoids"
					"memiliki koneksi dengan POKéMON.\p"

					"Terdapat catatan rekor terhadap para PELATIH"
					"bersatu sangat kuat dengan POKéMONnya, mereka"
					"benar-benar menjadi satu! Mirip seperti yang ada"
					"di legenda TAO trio!\l"
					"Tidakkah hal tersebut terdengar sangat"
					"menakjubkan?!\p"

					"{PAUSE 30}…Mohon maaf,{PAUSE 16} saya terlalu bersemangat."
					"Benar-benar menunjukkan betapa bergairahnya"
					"saya dengan persoalan ini,{PAUSE 16} haha!\p"

					"$")
		}
	}
}

